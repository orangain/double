#!/bin/bash

usage() {
	echo "Usage: $0 -b \"Background Command\" Foreground-Command [args...]"
	exit 1
}

ORIGINAL_COMMAND=$*
NEW_SID=

while getopts b:sh OPT
do
	case $OPT in
		b)
			BACKGROUND_COMMAND=$OPTARG
			;;
		s)
			NEW_SID="yes"
			;;
		h)
			usage
			;;
	esac
done

shift $(($OPTIND - 1))

if [ $# -eq 0 ]; then
	usage
fi
if [ -z "$BACKGROUND_COMMAND" ]; then
	usage
fi

FOREGROUND_COMMAND=$*

if [ $NEW_SID != "yes" ]; then
	setsid $0 -s -b "$BACKGROUND_COMMAND" $FOREGROUND_COMMAND
else
	# do execute
	trap "exit" INT TERM
	trap "kill 0" EXIT

	$BACKGROUND_COMMAND &
	$FOREGROUND_COMMAND
fi
